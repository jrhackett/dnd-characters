<div class = "container">
    <div class = "row">
        <h2 class = "text-center">Character Details</h2>
        <div class = "text-center section-button">
            <a id = "overview-button" class = "btn btn-default">01 Overview</a>
            <a id = "abilities-button" class = "btn btn-default">02 Abilities</a>
            <a id = "combat-button" class = "btn btn-default">03 Combat &amp; Equipment</a>
            <a id = "feats-button" class = "btn btn-default">04 Feats &amp; Traits</a>
            <a id = "spells-button" class = "btn btn-default">05 Spells</a>
        </div>
        <section id = "overview">
            <div class = "col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-12 col-xs-12 outer-col left">
                <div class = "field-group">
                    <p class = "value"><%= char.name %></p>
                    <p class = "label">CHARACTER NAME</p>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.level %></p>
                        <p class = "label">LEVEL</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.class %></p>
                        <p class = "label">CLASS</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.race %></p>
                        <p class = "label">RACE</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.background %></p>
                        <p class = "label">BACKGROUND</p>
                    </div>
                </div>
                <div class = "field-group bottom">
                    <p class = "value"><%= char.alignment %></p>
                    <p class = "label">ALIGNMENT</p>
                </div>
            </div>
            <div class = "col-lg-5 col-md-5 col-sm-12 col-xs-12 outer-col right">
                <p class = "details">Lorem</p>
            </div>
        </section>
        <section id = "abilities">
            <div class = "col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-12 col-xs-12 outer-col left">
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.strength.value %></p>
                        <p class = "label">STRENGTH</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.strength.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.dexterity.value %></p>
                        <p class = "label">DEXTERITY</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.dexterity.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.constitution.value %></p>
                        <p class = "label">CONSTITUTION</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.constitution.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.wisdom.value %></p>
                        <p class = "label">WISDOM</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.wisdom.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.intelligence.value %></p>
                        <p class = "label">INTELLIGENCE</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.intelligence.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                <div class = "inner-col left">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.charisma.value %></p>
                        <p class = "label">CHARISMA</p>
                    </div>
                </div>
                <div class = "inner-col right">
                    <div class = "field-group">
                        <p class = "value"><%= char.stats.charisma.modifier %></p>
                        <p class = "label">MODIFIER</p>
                    </div>
                </div>
                
            </div>
            <div class = "col-lg-5 col-md-5 col-sm-12 col-xs-12 outer-col right">
                <p class = "details">Lorem</p>
            </div>
        </section>
        <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <span> <a href = "/character/<%- char._id %>/edit" class = "btn btn-info">Edit</a></span>
            <form method = "post" name = "deletecharacter" action = "/character/<%- char._id %>/edit" style = "display: inline-block;">
                <input type="hidden" name="_method" value="delete"/>
                <button type="submit" class = "btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

<link href = "../../assets/stylesheets/character.css" rel = "stylesheet" />

<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<script src = "../../assets/javascripts/character.js"></script>
<% include ../partials/footer %>