<div class="container">
  <div class = "row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-6 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 content-box">
      <div class = "content-box-inner">
        <h1 class = "text-center content-title">Log in</h1>
        <a href="/auth/facebook" class="btn btn-primary btn-log"><span class="fa fa-facebook"></span> Log in with Facebook</a>
        <a href="/auth/twitter" class="btn btn-info btn-log"><span class="fa fa-twitter"></span> Log in with Twitter</a>
        <a href="/auth/google" class="btn btn-danger btn-log"><span class="fa fa-google-plus"></span> Log in with Google</a>

        <hr/>
        <!-- show any messages that come back with authentication -->
        {{#if message }}
            <div class="alert alert-danger">{{ message }}</div>
        {{/if}}

        <form action="/login" method="post" class = "right">
          <div class="form-group left">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group left">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
          </div>

          <button type="submit" class="btn btn-default btn-login">Login</button>
        </form>
      </div>
    </div>
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-6 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 lower-content">
      <p>Don't have an account? <a href="/signup" class = "btn btn-white">Signup</a></p>
    </div>
  </div>
</div>