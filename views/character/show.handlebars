<div class = "container">
  <div class = "row">
    <h2 class = "text-center">Character Details</h2>
    <div class = "text-center section-button">
      <a id = "overview-button" class = "btn btn-default">01 Overview</a>
      <a id = "abilities-button" class = "btn btn-default">02 Abilities</a>
      <a id = "combat-button" class = "btn btn-default">03 Combat &amp; Equipment</a>
      <a id = "feats-button" class = "btn btn-default">04 Feats &amp; Traits</a>
      <a id = "spells-button" class = "btn btn-default">05 Spells</a>
    </div>
    
    {{> show_overview }}
    {{> show_abilities }}
    {{> show_combat }}
    {{> show_feats }}
    {{> show_spells }}

    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
      <span> <a href = "/character/{{ char._id }}/edit" class = "btn btn-info">Edit</a></span>
      <form method = "post" name = "deletecharacter" action = "/character/{{ char._id }}/edit" style = "display: inline-block;">
        <input type="hidden" name="_method" value="delete"/>
        <button type="submit" class = "btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>