<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>D&amp;D Characters</title>
</head>
<body>
    <% include ../partials/header %>

    <div class="container">

        <div class="jumbotron text-center">
            <h3>All Characters</h3>
            <% for (var i = 0; i < char.length; i++) { %>
                <p><%= char[i].name %></p>
                <span> <a href = "/character/<%- char[i]._id %>" class = "btn btn-primary">Show</a></span>
                <span> <a href = "/character/<%- char[i]._id %>/edit" class = "btn btn-info">Edit</a></span>
                <form method = "post" name = "deletecharacter" action = "/character/<%- char[i]._id %>/edit" style = "display: inline-block;">
                    <input type="hidden" name="_method" value="delete"/>
                    <button type="submit" class = "btn btn-danger">Delete</button>
                </form>
            <% } %>
        </div>

    </div>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/20ce3dbf5c.js"></script>
</body>
</html>